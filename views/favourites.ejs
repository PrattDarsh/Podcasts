<body class="border-t-8 border-l-8 border-yellow-400">


    <section class="max-w-6xl px-4 py-16 mx-auto md:py-32">

        <h2 class="mb-8 text-6xl tracking-widest text-center text-white uppercase headings md:text-7xl md:text-left">
            Your <br>Favourites
        </h2>
        <div class="w-56 h-2 mb-4 bg-yellow-400"></div>
        <div class="grid md:grid-cols-2">
            <!-- <div class="space-y-4"> -->
            <% for(var i=0; i < test.length; i++) { %>
                <div class="px-6 py-6 mx-2 border-2 rounded-lg shadow-xl cardBorder">
                    <div class="md:flex md:space-x-6">
                        <div><img class="rounded-lg" src="<%=test[i].epImg%>"></div>
                        <div>
                            <p class="text-xs font-extrabold tracking-widest uppercase">Course- <span id="cn">
                                    <%=test[i].courseNo%>
                                </span><span class="italic font-semibold"> Episode- <span>
                                        <%=test[i].EpNo%>
                                    </span></p>
                            <h2 class="text-2xl font-bold">
                                <%=test[i].epTitle%>
                            </h2>
                            <p class="text-sm">
                                <%=test[i].epDesc%>
                            </p>
                        </div>
                    </div><audio class="w-full mt-4" src="<%=test[i].epLink%>" controls=""></audio>
                </div>



                <% } %>
        </div>
        <script>
            var course = document.getElementById('cn');
            var border = document.getElementsByClassName('cardBorder')
            // switch (course.innerHTML) {
            //     case 1: for (var i = 0; i < border.length; i++) {
            //         border[i].classList.add('border-yellow-400')
            //     }
            //         break;
            //     case 2: for (var i = 0; i < border.length; i++) {
            //         border[i].classList.add('border-yellow-400')
            //     }
            //         break;
            // }

            if (course.innerHTML == 1) {
                for (var i = 0; i < border.length; i++) {
                    border[i].classList.add('border-yellow-400')
                }
            } else if (course.innerHTML == 2) {
                for (var i = 0; i < border.length; i++) {
                    border[i].classList.add('border-pink-400')
                }
            }




